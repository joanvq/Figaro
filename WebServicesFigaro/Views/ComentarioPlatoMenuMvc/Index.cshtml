@model IEnumerable<WebServicesFigaro.Models.ComentarioPlatoMenu>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Menu
        </th>
        <th>
            Plato
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valoracion)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            if (item.Id != 0)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Menu.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plato.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Autor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valoracion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    }
    else
    {
        <tr></tr>
    }
    
</table>

@if (Request.Url.ToString().Contains("IndexPlato"))
{
    if (Model.Count() > 1)
    {
        <a href='@string.Format("../../PlatoMvc/Details/{0}", Model.FirstOrDefault().PlatoId)'>Back to Plato</a>
    }
    else
    {
        <a href="../../PlatoMvc/">
            Back to Platos
        </a>
    }
}
else if (Request.Url.ToString().Contains("IndexMenu"))
{
    if (Model.Count() > 1)
    {
        <a href='@string.Format("../../MenuMvc/Details/{0}", Model.FirstOrDefault().MenuId)'>Back to Menu</a>
    }
    else
    {
        <a href="../../MenuMvc/">
            Back to Menus
        </a>
    }
}
