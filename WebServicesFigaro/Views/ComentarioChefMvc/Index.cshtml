@model IEnumerable<WebServicesFigaro.Models.ComentarioChef>

@{
    ViewBag.Title = "Index";
}

<h2>Comentarios Chef</h2> 

<p>
    @if (Model.Count() > 0)
    {
        @Html.ActionLink("Create New", "Create", new { idChef = Model.FirstOrDefault().ChefId }, new { idChef = Model.FirstOrDefault().ChefId })
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Chef.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valoracion)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            if (item.Id != 0)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Chef.Nombre)
                        @Html.DisplayFor(modelItem => item.Chef.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valoracion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    }
    else
    {
        <tr>

        </tr>
    }


</table>
@if (Model.Count() > 0)
{
    <a href='@string.Format("../../ChefMvc/Details/{0}", Model.FirstOrDefault().ChefId)'>Back to Chef</a>
}
else
{
    <a href="../../ChefMvc/">Back to Chef</a>
}
