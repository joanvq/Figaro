<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:local="clr-namespace:Figaro"
              x:Class="Figaro.MainPage"
              xmlns:ViewModels="clr-namespace:Figaro.ViewModels;assembly=Figaro">
  <ContentPage.BindingContext>
    <ViewModels:MainViewModel />
  </ContentPage.BindingContext>

  <StackLayout Orientation="Vertical">
    <Button Text="Añadir Plato"
            Clicked="Button_OnClicked" />
  
    <ListView x:Name="ListaPlatosView"
              ItemsSource="{Binding ListaPlatos}"
		          HasUnevenRows="true"
              ItemTapped="">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal" Padding="12,6">

              <Label Text="{Binding Titulo}"
                     FontSize="24"/>
              <Label Text="{Binding Descripcion}" 
                     FontSize="18"
                     Opacity="0.6"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>