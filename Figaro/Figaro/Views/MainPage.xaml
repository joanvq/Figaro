<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Figaro.Views.MainPage"
             BackgroundImage="moscow.jpg">
  <ContentPage.Content>
    <StackLayout VerticalOptions="Start" HorizontalOptions="Center" Padding="0,20">
      <Image Source="logo_figaro.png" Margin="0,40"/>
      <Button x:Name="ConectarFace" Text="CONECTAR" Clicked="LoginFacebook_OnClicked" Margin="0,10"
              BackgroundColor="#3b5998" TextColor="White" IsVisible="False"/>
      <Button x:Name="Registrarse" Text="REGÍSTRATE" Clicked="Registrar_OnClicked" Margin="0,10"
              BackgroundColor="Transparent" BorderColor="White" TextColor="White" 
              IsVisible="False"/>
      <Button x:Name="IniciarSesion" Text="INICIA SESIÓN" Clicked="Login_OnClicked" Margin="0,20"
              BackgroundColor="Transparent" BorderColor="Transparent" TextColor="#f7f7f7" 
              IsVisible="False"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>